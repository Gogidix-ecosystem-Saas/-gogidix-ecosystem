# =====================================================
# GOGIDIX ECOSYSTEM - ENVIRONMENT CONFIGURATION
# =====================================================
# Environment variables template for all services
# Copy to .env and update with your actual values
# =====================================================

# ========================================
# AWS CONFIGURATION
# ========================================
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-west-2
AWS_ACCOUNT_ID=your_aws_account_id_here
EKS_CLUSTER_NAME=gogidix-eks-cluster
ECR_REGISTRY=your_account_id.dkr.ecr.us-west-2.amazonaws.com

# ========================================
# DATABASE CONFIGURATIONS
# ========================================

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=gogidix_ecosystem
POSTGRES_USER=gogidix_user
POSTGRES_PASSWORD=secure_postgres_password_here
POSTGRES_MULTIPLE_DATABASES=ai_analytics_dashboard,central_config,centralized_dashboard,gogidix_dev

# MongoDB
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DB=gogidix_ai_analytics
MONGO_USERNAME=gogidix_mongo_user
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=secure_mongo_password_here
MONGO_PASSWORD=secure_mongo_password_here

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password_here

# Elasticsearch
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# InfluxDB
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=gogidix-influxdb-token-2024
INFLUXDB_ORG=gogidix
INFLUXDB_BUCKET=ai-analytics
INFLUXDB_USERNAME=gogidix_influx
INFLUXDB_PASSWORD=secure_influx_password_here

# ========================================
# MESSAGE QUEUE CONFIGURATION
# ========================================

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:29092,localhost:9092
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_AUTO_CREATE_TOPICS_ENABLE=true
KAFKA_DELETE_TOPIC_ENABLE=true
KAFKA_LOG_RETENTION_HOURS=168
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1

# ========================================
# SERVICE DISCOVERY CONFIGURATION
# ========================================

# Eureka Server
EUREKA_SERVER_URL=http://eureka-server:8761/eureka/
EUREKA_CLIENT_REGISTER_WITH_EUREKA=true
EUREKA_CLIENT_FETCH_REGISTRY=true
EUREKA_INSTANCE_PREFER_IP_ADDRESS=true

# ========================================
# SECURITY CONFIGURATION
# ========================================

# JWT Configuration
JWT_SECRET=gogidix-jwt-secret-key-2024-very-long-and-secure-string
JWT_EXPIRATION=86400000
JWT_ISSUER=gogidix-ecosystem
JWT_ISSUER_URI=http://localhost:8080/auth/realms/gogidix
JWT_JWK_SET_URI=http://localhost:8080/auth/realms/gogidix/protocol/openid-connect/certs

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:4200,https://gogidix.com
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# SSL Configuration
SSL_ENABLED=true
SSL_KEYSTORE_PATH=/etc/ssl/certs/gogidix.jks
SSL_KEYSTORE_PASSWORD=secure_keystore_password

# ========================================
# MONITORING CONFIGURATION
# ========================================

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_ENDPOINT=/actuator/prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123
GRAFANA_URL=http://grafana:3000

# Application Monitoring
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always
MANAGEMENT_ENDPOINT_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus,loggers,heapdump,threaddump

# ========================================
# BIG DATA CONFIGURATION
# ========================================

# Apache Spark
SPARK_ENABLED=true
SPARK_MASTER=spark://spark-master:7077
SPARK_DRIVER_MEMORY=2g
SPARK_DRIVER_CORES=2
SPARK_EXECUTOR_MEMORY=2g
SPARK_EXECUTOR_CORES=2
SPARK_EXECUTOR_INSTANCES=2

# Jupyter Notebook
JUPYTER_TOKEN=jupyter-gogidix-2024
JUPYTER_ENABLED=true

# ========================================
# MACHINE LEARNING CONFIGURATION
# ========================================

ML_ENABLED=true
PREDICTIVE_ANALYTICS=true
ANOMALY_DETECTION=true
TREND_ANALYSIS=true
CORRELATION_ANALYSIS=true

# ========================================
# EMAIL CONFIGURATION
# ========================================

# SMTP Configuration
MAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_AUTH=true
SMTP_STARTTLS=true
MAIL_FROM=noreply@gogidix.com

# For Development (use MailHog)
DEV_SMTP_HOST=mailhog
DEV_SMTP_PORT=1025
DEV_SMTP_USERNAME=
DEV_SMTP_PASSWORD=

# ========================================
# DATABASE ADMIN TOOLS
# ========================================

# pgAdmin
PGADMIN_EMAIL=admin@gogidix.com
PGADMIN_PASSWORD=admin123

# Redis Commander
REDIS_COMMANDER_PASSWORD=secure_redis_password_here

# ========================================
# LOGGING CONFIGURATION
# ========================================

# Log Levels
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_GOGIDIX=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK=INFO
LOGGING_LEVEL_ORG_HIBERNATE=ERROR

# File Logging
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/var/log/gogidix/
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_MAX_HISTORY=30

# ========================================
# PERFORMANCE CONFIGURATION
# ========================================

# Connection Pooling
DB_POOL_MAXIMUM_POOL_SIZE=50
DB_POOL_MINIMUM_IDLE=10
DB_POOL_CONNECTION_TIMEOUT=20000
DB_POOL_IDLE_TIMEOUT=300000
DB_POOL_MAX_LIFETIME=1200000

# Redis Pool
REDIS_POOL_MAX_ACTIVE=50
REDIS_POOL_MAX_IDLE=10
REDIS_POOL_MIN_IDLE=5
REDIS_POOL_MAX_WAIT=2000

# Rate Limiting
RATE_LIMIT_PER_IP=100
RATE_LIMIT_WINDOW_MINUTES=1

# ========================================
# CACHING CONFIGURATION
# ========================================

# Application Cache
CACHE_ENABLED=true
CACHE_TTL_MINUTES=30
CACHE_MAX_SIZE=1000

# Dashboard Cache
DASHBOARD_CACHE_TTL_MINUTES=30
DASHBOARD_CACHE_ENABLED=true

# ========================================
# FILE STORAGE CONFIGURATION
# ========================================

# File Upload
FILE_UPLOAD_ENABLED=true
FILE_UPLOAD_MAX_SIZE=50MB
FILE_UPLOAD_MAX_REQUEST_SIZE=100MB
FILE_UPLOAD_DIR=/var/gogidix/uploads/
FILE_UPLOAD_ALLOWED_EXTENSIONS=csv,json,xlsx,parquet,avro,pdf,jpg,png

# S3 Configuration (for production)
S3_BUCKET_NAME=gogidix-ecosystem-storage
S3_REGION=us-west-2
S3_ACCESS_KEY_ID=your_s3_access_key
S3_SECRET_ACCESS_KEY=your_s3_secret_key

# ========================================
# SCHEDULER CONFIGURATION
# ========================================

SCHEDULER_ENABLED=true
SCHEDULER_POOL_SIZE=20

# Analytics Processing
ANALYTICS_PROCESSING_ENABLED=true
ANALYTICS_PROCESSING_CRON=0 */5 * * * ?

# Data Cleanup
DATA_CLEANUP_ENABLED=true
DATA_CLEANUP_CRON=0 0 2 * * ?

# Report Generation
REPORT_GENERATION_ENABLED=true
REPORT_GENERATION_CRON=0 0 6 * * ?

# Model Training
MODEL_TRAINING_ENABLED=true
MODEL_TRAINING_CRON=0 0 4 * * SUN

# ========================================
# REAL-TIME CONFIGURATION
# ========================================

# WebSocket
WEBSOCKET_ENABLED=true
WEBSOCKET_ENDPOINT=/websocket
WEBSOCKET_MESSAGE_SIZE_LIMIT=128000
WEBSOCKET_SESSION_LIMIT=2000
WEBSOCKET_HEARTBEAT_INTERVAL=25000

# Real-time Updates
REAL_TIME_UPDATES_ENABLED=true
UPDATE_INTERVAL_MS=5000

# ========================================
# FEATURE TOGGLES
# ========================================

# Feature Flags
FEATURE_AI_ANALYTICS=true
FEATURE_MACHINE_LEARNING=true
FEATURE_REAL_TIME_DASHBOARD=true
FEATURE_EXPORT_REPORTS=true
FEATURE_EMAIL_NOTIFICATIONS=false
FEATURE_SLACK_NOTIFICATIONS=false
FEATURE_WEBHOOK_NOTIFICATIONS=true

# Development Features
DEV_MODE_ENABLED=false
DEBUG_MODE_ENABLED=false
HOT_RELOAD_ENABLED=false

# ========================================
# EXTERNAL API CONFIGURATION
# ========================================

# Third-party Services
EXTERNAL_API_TIMEOUT=30000
EXTERNAL_API_RETRY_ATTEMPTS=3

# Notification Services
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# ========================================
# BACKUP AND DISASTER RECOVERY
# ========================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=gogidix-backups

# Disaster Recovery
DR_ENABLED=false
DR_RECOVERY_POINT_OBJECTIVE=3600
DR_RECOVERY_TIME_OBJECTIVE=14400

# ========================================
# DEVELOPMENT ENVIRONMENT OVERRIDES
# ========================================

# Development Database
DEV_POSTGRES_HOST=localhost
DEV_POSTGRES_PORT=5432
DEV_MONGO_HOST=localhost
DEV_MONGO_PORT=27017
DEV_REDIS_HOST=localhost
DEV_REDIS_PORT=6379

# Development Ports
DEV_NGINX_PORT=80
DEV_NGINX_SSL_PORT=443
DEV_GRAFANA_PORT=3000
DEV_PROMETHEUS_PORT=9090
DEV_JUPYTER_PORT=8888
DEV_PGADMIN_PORT=5050
DEV_MAILHOG_PORT=8025

# ========================================
# PRODUCTION ENVIRONMENT SPECIFIC
# ========================================

# Production URLs
PROTOCOL=https
DOMAIN=gogidix.com
API_DOMAIN=api.gogidix.com
MONITORING_DOMAIN=monitoring.gogidix.com

# SSL Certificate Paths
SSL_CERT_PATH=/etc/ssl/certs/gogidix.crt
SSL_KEY_PATH=/etc/ssl/private/gogidix.key
SSL_CHAIN_PATH=/etc/ssl/certs/gogidix-chain.crt

# Production Security
SECURITY_HEADERS_ENABLED=true
RATE_LIMITING_STRICT=true
WAF_ENABLED=true
DDOS_PROTECTION=true

# ========================================
# TESTING CONFIGURATION
# ========================================

# Test Database
TEST_POSTGRES_DB=gogidix_test
TEST_MONGO_DB=gogidix_test
TEST_REDIS_DB=1

# Test Configuration
TEST_DATA_SEEDING=true
TEST_CLEANUP_ENABLED=true
TEST_PARALLEL_EXECUTION=true

# ========================================
# MIGRATION CONFIGURATION
# ========================================

# Database Migration
MIGRATION_AUTO_APPLY=false
MIGRATION_VALIDATE_ON_MIGRATE=true
MIGRATION_OUT_OF_ORDER=false

# Data Migration
DATA_MIGRATION_BATCH_SIZE=1000
DATA_MIGRATION_TIMEOUT=3600000

# ========================================
# NOTES AND INSTRUCTIONS
# ========================================

# 1. Copy this file to .env and update with your actual values
# 2. Never commit the actual .env file to version control
# 3. Use GitHub Secrets for sensitive information in production
# 4. Update passwords and tokens with strong, unique values
# 5. Configure SSL certificates before production deployment
# 6. Set up monitoring and alerting for all critical services
# 7. Regularly rotate secrets and update environment variables